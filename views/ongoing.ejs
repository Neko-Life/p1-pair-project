<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
            color: orange;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <% let displayTime = Math.ceil(Math.random() * 100) %>
    <% if (end) {%>
        <h2>Perkiraan Waktu Tiba</h2>
        <h2><%= `00:00` %></h2>
        <h3>Sudah Sampaiii!</h3>
        <p>Berikan Rate Untuk Pengalaman Perjalananmu:</p>
      <form action="/ongoing" method="post">
        <label>
            <input type="radio" name="rate" value="1"/>1 <span class="fa fa-star checked"></span>
        </label>
        <label>
            <input type="radio" name="rate" value="2"/>2 <span class="fa fa-star checked"></span>
        </label>
        <label>
            <input type="radio" name="rate" value="3"/>3 <span class="fa fa-star checked"></span>
        </label>
        <label>
            <input type="radio" name="rate" value="4"/>4 <span class="fa fa-star checked"></span>
        </label>
        <label>
            <input type="radio" name="rate" value="5"/>5 <span class="fa fa-star checked"></span>
        </label>
        <br><br>
        <input type="submit" value="Submit Stars">
      </form>
    <% %>
    <% } else { %>
    
    <h2>Perkiraan Waktu Tiba</h2>
    <% if (displayTime % 60 !== 0){ %>
        <% if (displayTime % 60 < 10){ %>
        <h2><%= `0${Math.floor(displayTime/60)}:0${displayTime%60}` %></h2>
        <% } else { %>
        <h2><%= `0${Math.floor(displayTime/60)}:${displayTime%60}` %></h2>
        <% } %>
    <% } else { %>
        <h2><%= `0${displayTime%60}:00` %></h2>
    <% } %>
    <h3>Semoga Selamat Sampai Tujuan!</h3>
    <br>
    <br>
    <a href="/ongoing?end=end">
        <button>Akhiri Perjalanan</button>
    </a>
    <% } %>
</body>
</html>
